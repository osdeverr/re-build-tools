{
  "name": "re-build-tools",
  "displayName": "Re Build Tools",
  "description": "Support for Re projects in Visual Studio Code",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:re-build-tools.helloWorld",
    "workspaceContains:**/re.yml",
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "re-build-tools.helloWorld",
        "title": "Hello World"
      }
    ],
    "taskDefinitions": [
      {
        "type": "re-build-tools"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "re.json",
        "url": "https://raw.githubusercontent.com/osdeverr/rebs/main/meta/re-target.schema.json"
      }
    ],
    "yamlValidation": [
      {
        "fileMatch": "re.yml",
        "url": "https://raw.githubusercontent.com/osdeverr/rebs/main/meta/re-target.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "vscode-cpptools": "^6.1.0"
  },
  "repository": "https://github.com/osdeverr/re-build-tools"
}
